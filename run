#!/bin/bash

# Move wednesday-log if it exists
date=$(date +"%Y%m%d%H%M")
if [ -f logs/wednesday.log ]; then
    mv logs/wednesday.log logs/old/wednesday_${date}.log
fi

if [ -f logs/wb_err.log ]; then
    mv logs/wb_err.log logs/old/wb_err_${date}.log
fi

# Run wednesday-bot in background.
# Redirect error output to /logs/errors
# TODO: Find out why output doesn't go to /logs/wb_err
nohup python3 -u wednesday.py > logs/wb_err.log 2>&1&
sleep 1
echo '
'

#make sure he's alive
echo "Alive?"
./alive
